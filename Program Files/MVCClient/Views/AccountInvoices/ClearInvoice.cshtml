@{Layout = "~/Views/Shared/_LayoutPopupWindow.cshtml";}

@model MVCDTO.SalesTasks.PublishApi

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.AccountInvoiceID);

    <div style="height: 230px;">
        <div style="margin-left: 80px; padding-top: 10px;">
            <div class="form-group1">
                @Html.LabelFor(model => model.ApiAccount, htmlAttributes: new { @class = "control-label-left" })
                <div class="div-input">
                    @Html.Kendo().MaskedTextBoxFor(model => model.ApiAccount).HtmlAttributes(new { @class = "input-class" })
                    @Html.ValidationMessageFor(model => model.ApiAccount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group1">
                @Html.LabelFor(model => model.ApiACPass, htmlAttributes: new { @class = "control-label-left" })
                <div class="div-input">
                    @Html.Kendo().MaskedTextBoxFor(model => model.ApiACPass).HtmlAttributes(new { @class = "input-class", @Type = "password" })
                    @Html.ValidationMessageFor(model => model.ApiACPass, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @Html.Partial("~/Views/Helpers/Commons/_ViewHeader.cshtml")

    </div>



    <div class="background-bar" style="width: 620px;">
        <div class="popup-button-bar" style="margin-right: 6px;">
            <button type="submit" class="k-button"> <img src="~/Content/Images/New/Delete32m.png" alt="" /> Xác nhận xóa HĐ điện tử </button>
            <button type="button" class="k-button" onclick="window.parent.$('#myWindow').data('kendoWindow').close()"> <img src="~/Content/Images/Mains/Users-Exit-icon.png" alt="" /> Thoát </button>
        </div>
    </div>


}

<link href="@Url.Content("~/Content/CustomCss/GeneralPopup.css")" rel="stylesheet" type="text/css" />

<script type="text/javascript">
    function cancelButton_Click() {
        window.parent.$("#myWindow").data("kendoWindow").close();
    }
</script>

<style>
    #div-alert {
        width: 600px;
    }

    .validation-summary-errors {
        width: 600px;
    }

    .form-group1 {
        padding-top: 10px;
    }

    .input-class {
        width: 280px;
    }
</style>